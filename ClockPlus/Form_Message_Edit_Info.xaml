<metro:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
 
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ClockPlus"
        x:Class="ClockPlus.Form_Message_Edit_Info"
        x:Name="Message_Edit_Info"
        Title="メッセージ内容の仕様について" Loaded="Form_Loaded" Closed="Form_Closed" WindowStartupLocation="CenterScreen" ShowTitleBar="true" ShowMaxRestoreButton="False" ShowMinButton="False" ShowSystemMenu="False" TitleBarHeight="30" TitleCharacterCasing="Normal" Icon="./Resources/icon/Message.ico" Width="398" MinWidth="398" MaxWidth="398" Height="400" MinHeight="400">

    <metro:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}" FontSize="16" FontFamily="Meiryo UI" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontWeight="Normal" Margin="8 -1 8 0"/>
        </DataTemplate>
    </metro:MetroWindow.TitleTemplate>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <GroupBox Header="メッセージのByte数について" Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Margin="5,5,5,5" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                    <Grid>
                        <TextBlock TextWrapping="Wrap" Text="・メッセージの総Byte数が127Byteを超えないようにして下さい。" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1,1,1,1"/>
                    </Grid>
                </GroupBox>
            </Grid>
            <GroupBox Header="特殊文字について" Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Margin="5,5,5,5" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock TextWrapping="Wrap" Text="・次の特殊文字は、以下の文章に置換されて出力されます。" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1,1,1,1"/>

                    <ListView  x:Name="ListView_Template" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding}" Grid.Row="1">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Margin="2,2,2,2">
                                    <Grid ShowGridLines="True">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock TextWrapping="Wrap" Text="特殊文字" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="実行時の条件" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1,1,1,1" Grid.Column="1"/>
                                        <TextBlock TextWrapping="Wrap" Text="出力内容" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1,1,1,1" Grid.Column="2"/>

                                        <TextBlock TextWrapping="Wrap" Text="{Binding Character1}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="1" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Condition1}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Text1}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="2" Margin="1,1,1,1"/>

                                        <TextBlock TextWrapping="Wrap" Text="{Binding Character2}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="2" Margin="1,1,1,1" />
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Condition2}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Text2}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" Margin="1,1,1,1"/>

                                        <TextBlock TextWrapping="Wrap" Text="{Binding Character3}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="3" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Condition3}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Margin="1,1,1,1"/>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Text3}" VerticalAlignment="Center" FontFamily="Meiryo UI" FontSize="11" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="2" Margin="1,1,1,1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="Close_Button" Content="閉じる" HorizontalAlignment="Right" Grid.Row="1" Width="100" Height="30" Margin="4,4,4,4" Click="Close_Button_Click" FontWeight="Normal" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
            </StackPanel>
        </Grid>
    </Grid>
</metro:MetroWindow>