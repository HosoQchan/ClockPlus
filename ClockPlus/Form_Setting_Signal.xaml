<metro:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:local="clr-namespace:ClockPlus"
        x:Class="ClockPlus.Form_Setting_Signal"
        x:Name="Setting_Signal"
        Title="時報" Loaded="Form_Loaded" Closed="Form_Closed" WindowStartupLocation="CenterScreen" ShowTitleBar="true" ShowMaxRestoreButton="False" ShowMinButton="False" ShowSystemMenu="False" TitleBarHeight="30" TitleCharacterCasing="Normal" FontFamily="Meiryo UI" Icon="./Resources/icon/Bell.ico" Width="360" Height="320" ResizeMode="NoResize">

    <metro:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}" FontSize="16" FontFamily="Meiryo UI" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontWeight="Normal" Margin="8 -1 8 0"/>
        </DataTemplate>
    </metro:MetroWindow.TitleTemplate>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="Wrap" Text="再生テスト" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button x:Name="Button_Play" FontFamily="Meiryo UI" Click="Button_Play_Click" FontSize="11" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Height="30" Grid.Row="1" HorizontalAlignment="Center">
                    <Image x:Name="Image_Button_Play" Source="./Resources/icon/Play.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                    <Button Content="取り消し" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Cancel_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                    <Button Content="決定" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Ok_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="サウンド" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="デバイス" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                        <ComboBox x:Name="ComboBox_Device" Grid.Column="1" SelectionChanged="ComboBox_Device_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11"/>
                    </GroupBox>
                    <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="鳴動間隔" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="ComboBox_Cycle" SelectionChanged="ComboBox_Cycle_SelectionChanged" FontFamily="Meiryo UI" FontSize="11" Margin="1,1,1,1"/>
                            <TextBlock TextWrapping="Wrap" Text="分" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="音量" Margin="1,1,1,1" Grid.Row="2" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="Slider_Volume" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center" SmallChange="1" ValueChanged="Slider_Volume_ValueChanged" Margin="1,1,1,1"/>
                            <TextBlock x:Name="TextBlock_Volume" TextWrapping="Wrap" Text="100" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </GroupBox>

            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="音声" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="TextBlock_Voice" TextWrapping="Wrap" Text="サウンド再生後、時刻を音声で知らせる" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <Grid x:Name="Grid_Voice" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <metro:ToggleSwitch x:Name="ToggleSwich_Voice" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Toggled="ToggleSwich_Voice_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                        <Button x:Name="Button_Voice" ToolTip="音声の設定を開きます" FontFamily="Meiryo" Click="Button_Voice_Click" Height="30" Grid.Column="1" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                            <Image Source="./Resources/icon/Voice.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</metro:MetroWindow>