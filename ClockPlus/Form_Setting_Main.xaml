<metro:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:local="clr-namespace:ClockPlus"
        x:Class="ClockPlus.Form_Setting_Main"
        x:Name="Setting_Main"
        Title="設定" Loaded="Form_Loaded" Closed="Form_Closed" WindowStartupLocation="CenterScreen" ShowTitleBar="true" ShowMaxRestoreButton="False" ShowMinButton="False" ShowSystemMenu="False" TitleBarHeight="30" TitleCharacterCasing="Normal" FontFamily="Meiryo UI" Icon="./Resources/icon/Setting.ico" Width="361" Height="320.67" ResizeMode="NoResize">

    <metro:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}" FontSize="16" FontFamily="Meiryo UI" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontWeight="Normal" Margin="8 -1 8 0"/>
        </DataTemplate>
    </metro:MetroWindow.TitleTemplate>
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Bottom">
                <Button x:Name="Button_Ok" Content="閉じる" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Ok_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
            </StackPanel>
            
            <TabControl x:Name="TabControl_Setting" Height="250">
                <TabItem x:Name="TabItem_Main" Header="基本" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="起動" Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="145"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="Windows起動時に実行する" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <metro:ToggleSwitch x:Name="ToggleSwich_AutoStart" Grid.Column="1" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Toggled="ToggleSwich_AutoStart_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="テーマ" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <RadioButton x:Name="RadioButton_System" Click ="RadioButton_Theme_Click" Content="自動" VerticalContentAlignment="Center" FontSize="11" FontFamily="Meiryo UI"/>
                                <RadioButton x:Name="RadioButton_Light" Click ="RadioButton_Theme_Click" Content="ライト" VerticalContentAlignment="Center" FontSize="11" Grid.Column="1" FontFamily="Meiryo UI"/>
                                <RadioButton x:Name="RadioButton_Dark" Click ="RadioButton_Theme_Click" Content="ダーク" VerticalContentAlignment="Center" FontSize="11" FontFamily="Meiryo UI" Grid.Column="2"/>

                                <ComboBox x:Name="ComboBox_Color" ItemsSource="{Binding}" SelectionChanged ="ComboBox_Color_SelectionChanged" VerticalContentAlignment="Center" Margin="1,1,1,1" Grid.Column="4">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding Color}"/>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="{Binding Name}"></TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="時報" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="145"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="時報を鳴らす" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <metro:ToggleSwitch x:Name="ToggleSwich_Signal" Grid.Column="1" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Toggled="ToggleSwich_Signal_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                                <Button x:Name="Button_Signal" ToolTip="時報の設定を開きます" FontFamily="Meiryo" Click="Button_Signal_Click" Height="30" Grid.Column="2" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                                    <Image Source="./Resources/icon/Bell.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="解除用パスワード" Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Grid.Row="5" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Resources/icon/Key.ico" HorizontalAlignment="Center" VerticalAlignment="Center" Width="20"/>
                                <TextBox x:Name="TextBox_Password" MaxLength="10" TextWrapping="Wrap" Text="" FontFamily="Meiryo UI" FontSize="11" PreviewTextInput="TextBox_Password_TextInput" CommandManager.PreviewExecuted="TextBox_Password_Executed" Grid.Column="1" ToolTip="半角英数字 ※10文字まで"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <TabItem x:Name="TabItem_Voice" Header="音声" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="14">
                    <GroupBox Header="音声Engine" Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Grid.Row="3" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="※設定の反映には再起動が必要です" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" FontWeight="Bold" Margin="2,2,2,2"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="Engine名" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <ComboBox x:Name="ComboBox_Engine" SelectionChanged="ComboBox_Engine_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35" ToolTip="音声合成ソフト([AivisSpeech]又は[VoiceBox])をインストールすることにより、音声でのお知らせ機能が利用可能になります。" Grid.Row="1" Grid.Column="1"/>
                            </Grid>

                            <Grid x:Name="Grid_VoicePath" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="フォルダ" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBox x:Name="TextBox_EnginePath" TextWrapping="NoWrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontFamily="Meiryo UI" FontSize="11" Grid.Column="1" IsReadOnly="True" Height="40" Margin="1,1,1,1" VerticalContentAlignment="Center" ToolTip="音声Engine本体(run.exe)のあるフォルダを選択してください"/>
                                <Button x:Name="Button_FolderSelect" Content="選択" Click="Button_FolderSelect_Click" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontWeight="Normal" FontSize="11" Grid.Column="2" Width="70" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </TabItem>

                <TabItem x:Name="TabItem_Weather" Header="天気" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="14">
                    <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="予報エリア" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="都道府県" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <ComboBox x:Name="ComboBox_Pref" Grid.Column="1" SelectionChanged="ComboBox_Pref_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35"/>
                                <TextBlock TextWrapping="Wrap" Text="地域" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1"/>
                                <ComboBox x:Name="ComboBox_Area" Grid.Column="1" SelectionChanged="ComboBox_Area_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35" Grid.Row="1"/>
                            </Grid>
                            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="音声" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="TextBlock_Voice" TextWrapping="Wrap" Text="予報を音声で知らせる" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <Grid x:Name="Grid_Voice" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <metro:ToggleSwitch x:Name="ToggleSwich_Voice" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Toggled="ToggleSwich_Voice_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                                        <Button x:Name="Button_Voice" ToolTip="音声の設定を開きます" FontFamily="Meiryo" Click="Button_Voice_Click" Height="30" Grid.Column="1" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                                            <Image Source="./Resources/icon/Voice.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock TextWrapping="Wrap" Text="テスト" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1">
                                    <Button x:Name="Button_Weather" Content="天気予報(気象庁)のサイトを表示" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Weather_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </TabItem>
                
                <TabItem x:Name="TabItem_Display" Header="表示" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="14">
                    <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="時計表示" Grid.Row="4" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="アナログ時計の表示" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <metro:ToggleSwitch x:Name="ToggleSwich_Analog" Grid.Column="1" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Toggled="ToggleSwich_Analog_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                            <TextBlock TextWrapping="Wrap" Text="デジタル１時計の表示" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1"/>
                            <metro:ToggleSwitch x:Name="ToggleSwich_Digital1" Grid.Column="1" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" Toggled="ToggleSwich_Digital1_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                            <TextBlock TextWrapping="Wrap" Text="デジタル２時計の表示" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2"/>
                            <metro:ToggleSwitch x:Name="ToggleSwich_Digital2" Grid.Column="1" Margin="1,1,1,1" FontSize="11" FontFamily="Meiryo UI" Grid.Row="2" Toggled="ToggleSwich_Digital2_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                            <Button x:Name="Button_Alalog_Setting" ToolTip="アナログ時計の設定を開きます" FontFamily="Meiryo" Click="Button_Alalog_Setting_Click" Height="30" Grid.Column="2" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                                <Image Source="./Resources/icon/Clock_Analog.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                            <Button x:Name="Button_Digital1_Setting" ToolTip="デジタル１時計の設定を開きます" FontFamily="Meiryo" Click="Button_Digital1_Setting_Click" Height="30" Grid.Column="2" Grid.Row="1" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                                <Image Source="./Resources/icon/Clock_Digital.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                            <Button x:Name="Button_Digital2_Setting" ToolTip="デジタル２時計の設定を開きます" FontFamily="Meiryo" Click="Button_Digital2_Setting_Click" Height="30" Grid.Column="2" Grid.Row="2" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}">
                                <Image Source="./Resources/icon/Clock_Digital.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </GroupBox>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</metro:MetroWindow>