<metro:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:local="clr-namespace:ClockPlus"
        x:Class="ClockPlus.Form_Edit_Voice"
        x:Name="Edit_Voice"
        Title="音声" Loaded="Form_Loaded" Closed="Form_Closed" WindowStartupLocation="CenterScreen" ShowTitleBar="true" ShowMaxRestoreButton="False" ShowMinButton="False" ShowSystemMenu="False" TitleBarHeight="30" TitleCharacterCasing="Normal" FontFamily="Meiryo UI" Icon="./Resources/icon/Voice.ico" Width="360" Height="400" ResizeMode="NoResize">

    <metro:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}" FontSize="16" FontFamily="Meiryo UI" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontWeight="Normal" Margin="8 -1 8 0"/>
        </DataTemplate>
    </metro:MetroWindow.TitleTemplate>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="Wrap" Text="再生テスト" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button x:Name="Button_Play" FontFamily="Meiryo UI" Click="Button_Play_Click" FontSize="11" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}" Height="30" Grid.Row="1" HorizontalAlignment="Center">
                    <Image x:Name="Image_Button_Play" Source="./Resources/icon/Play.ico" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                    <Button Content="取り消し" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Cancel_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                    <Button Content="決定" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Click="Button_Ok_Click" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock TextWrapping="Wrap" Text="キャラクタ" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox x:Name="ComboBox_Name" Grid.Column="1" SelectionChanged="ComboBox_Name_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35"/>
                <TextBlock TextWrapping="Wrap" Text="タイプ" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1"/>
                <ComboBox x:Name="ComboBox_Type" Grid.Column="1" SelectionChanged="ComboBox_Type_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35" Grid.Row="1"/>
            </Grid>
            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="設定値" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock TextWrapping="Wrap" Text="話す速度" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Slider x:Name="Slider_Speed" IsSnapToTickEnabled="True" TickFrequency="0.1" VerticalAlignment="Center" ValueChanged="Slider_Speed_ValueChanged" Margin="1,1,1,1" Grid.Column="1" Minimum="0.5" Maximum="2" LargeChange="0.1" Value="1"/>
                    <TextBlock x:Name="TextBlock_Speed" TextWrapping="Wrap" Text="1.00" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2"/>

                    <TextBlock TextWrapping="Wrap" Text="声の高さ" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1"/>
                    <Slider x:Name="Slider_Pitch" IsSnapToTickEnabled="True" TickFrequency="0.01" VerticalAlignment="Center" SmallChange="0.01" ValueChanged="Slider_Pitch_ValueChanged" Margin="1,1,1,1" Grid.Column="1" Grid.Row="1" Minimum="-0.15" Maximum="0.15" LargeChange="0.01"/>
                    <TextBlock x:Name="TextBlock_Pitch" TextWrapping="Wrap" Text="1.00" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1"/>

                    <TextBlock TextWrapping="Wrap" Text="開始時の無音(秒)" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2"/>
                    <Slider x:Name="Slider_PrePhone" IsSnapToTickEnabled="True" TickFrequency="0.1" VerticalAlignment="Center" ValueChanged="Slider_PrePhone_ValueChanged" Margin="1,1,1,1" Grid.Column="1" Grid.Row="2" Maximum="1.5" LargeChange="0.1" Value="0.1"/>
                    <TextBlock x:Name="TextBlock_PrePhone" TextWrapping="Wrap" Text="1.00" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="2"/>

                    <TextBlock TextWrapping="Wrap" Text="終了時の無音(秒)" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3"/>
                    <Slider x:Name="Slider_PostPhone" IsSnapToTickEnabled="True" TickFrequency="0.1" VerticalAlignment="Center" ValueChanged="Slider_PostPhone_ValueChanged" Margin="1,1,1,1" Grid.Column="1" Grid.Row="3" Maximum="1.5" LargeChange="0.1" Value="0.1"/>
                    <TextBlock x:Name="TextBlock_PostPhone" TextWrapping="Wrap" Text="1.00" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="3"/>
                </Grid>
            </GroupBox>

            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="デバイス" Margin="1,1,1,1" Grid.Row="2" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                <ComboBox x:Name="ComboBox_Device" Grid.Column="1" SelectionChanged="ComboBox_Device_SelectionChanged" Margin="1,1,1,1" FontFamily="Meiryo UI" FontSize="11" Height="35"/>
            </GroupBox>

            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="音量" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="Slider_Volume" IsSnapToTickEnabled="True" TickFrequency="0.1" VerticalAlignment="Center" ValueChanged="Slider_Volume_ValueChanged" Margin="1,1,1,1" Minimum="0" Maximum="2" LargeChange="0.1" Value="1"/>
                    <TextBlock x:Name="TextBlock_Volume" TextWrapping="Wrap" Text="1.00" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</metro:MetroWindow>
