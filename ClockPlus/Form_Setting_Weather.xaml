<metro:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
    
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:local="clr-namespace:ClockPlus"
        x:Class="ClockPlus.Form_Setting_Weather"
        x:Name="Setting_Weather"
        Title="天気予報" Loaded="Form_Loaded" Closed="Form_Closed" WindowStartupLocation="CenterScreen" ShowTitleBar="true" ShowMaxRestoreButton="False" ShowMinButton="False" ShowInTaskbar="True" ShowSystemMenu="False" TitleBarHeight="30" TitleCharacterCasing="Normal" ResizeMode="NoResize" FontFamily="Meiryo UI" Icon="./Resources/icon/Clock_Analog.ico" Width="336" Height="363.84">

    <metro:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}" FontSize="16" FontFamily="Meiryo UI" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontWeight="Normal" Margin="8 -1 8 0"/>
        </DataTemplate>
    </metro:MetroWindow.TitleTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="文字の色" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="最高気温" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <local:ColorPicker x:Name="ColorPicker_TmpHigh" Grid.Column="1" SelectionChanged="ColorPicker_TmpHigh_SelectionChanged" Height="26" Margin="1,1,1,1"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="その他" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <local:ColorPicker x:Name="ColorPicker_Other" Grid.Column="1" SelectionChanged="ColorPicker_Other_SelectionChanged" Height="26" Margin="1,1,1,1"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="最低気温" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <local:ColorPicker x:Name="ColorPicker_TmpLow" Grid.Column="1" SelectionChanged="ColorPicker_TmpLow_SelectionChanged" Height="26" Margin="1,1,1,1"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="背景の色" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="背景を透明にする" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <metro:ToggleSwitch x:Name="ToggleSwitch_BackColor" Grid.Column="1" FontFamily="Meiryo UI" FontSize="11" Margin="1,1,1,1" Toggled="ToggleSwitch_BackColor_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                        </Grid>
                        <Grid x:Name="Grid_BackColor" Grid.Column="1">
                            <local:ColorPicker x:Name="ColorPicker_BackColor" Grid.Column="1" SelectionChanged="ColorPicker_BackColor_SelectionChanged" Height="26" Margin="1,1,1,1"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="不透明度" Margin="1,1,1,1" Grid.Row="2" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="Slider_Opacity" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center" SmallChange="1" ValueChanged="Slider_Opacity_ValueChanged" Margin="1,1,1,1" Grid.Column="1"/>
                        <TextBlock x:Name="TextBlock_Opacity" TextWrapping="Wrap" Text="100" FontSize="11" FontFamily="Meiryo UI" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2"/>
                    </Grid>
                </GroupBox>
                <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="位置" Margin="1,1,1,1" Grid.Row="3" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="縦軸" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <Slider x:Name="Slider_Height" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center" SmallChange="1" LargeChange="10" Maximum="100" Grid.Column="1" ValueChanged="Slider_Height_ValueChanged" Margin="1,1,1,1"/>
                            <TextBlock x:Name="TextBlock_Height" TextWrapping="Wrap" Text="1000" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="横軸" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <Slider x:Name="Slider_Width" IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center" SmallChange="1" LargeChange="10" Maximum="100" Grid.Column="1" ValueChanged="Slider_Width_ValueChanged" Margin="1,1,1,1"/>
                            <TextBlock x:Name="TextBlock_Width" TextWrapping="Wrap" Text="1000" FontSize="11" FontFamily="Meiryo UI" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock TextWrapping="Wrap" Text="最前面に表示" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <metro:ToggleSwitch x:Name="ToggleSwitch_TopMost" Grid.Column="1" FontFamily="Meiryo UI" FontSize="11" Margin="1,1,1,1" Toggled="ToggleSwitch_TopMost_Toggled" metro:HeaderedControlHelper.HeaderFontFamily="Meiryo UI" metro:HeaderedControlHelper.HeaderFontSize="11" OffContent="" OnContent=""/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
            <GroupBox Style="{DynamicResource MahApps.Styles.GroupBox.VisualStudio}" Header="倍率" Margin="1,1,1,1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Slider x:Name="Slider_Zoom" IsSnapToTickEnabled="True" TickFrequency="0.01" Orientation="Vertical" Maximum="1.5" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_Zoom_ValueChanged" Margin="1,1,1,1" Minimum="0.5" Value="1"/>
                    <TextBlock x:Name="TextBlock_Zoom" TextWrapping="Wrap" Text="100" FontSize="11" FontFamily="Meiryo UI" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </GroupBox>

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="初期化" Click="Button_Init_Click" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
            <Button Content="取り消し" Click="Button_Cancel_Click" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
            <Button Content="決定" Click="Button_Ok_Click" Width="100" Height="30" Margin="2,2,2,2" FontFamily="Meiryo UI" FontSize="11" FontWeight="Normal" Style="{DynamicResource MahApps.Styles.Button.MetroSquare.Accent}"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>